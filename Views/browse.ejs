<!DOCTYPE html>
<html lang="en" dir="ltr">
 <head>
    <meta charset="utf-8">
   <title>NotesON | Browse </title>

     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
     <link rel="stylesheet" href="css/browse.css">
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
     <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
   </head>
   <body>

     <nav style="background-color: #00005c;" class="navbar navbar-expand-md  navbar-dark">
<a class="navbar-brand" href="/"> <img src="images/logo.png" alt="logo" width="50px" height="50px"> </a>
         <div class="ml-auto">
            <a  href="/logout" data-toggle="tooltip" title="Log Out" > <img src="images/logout.png" alt="log out icon"> </a>
           <a  href="/profile" data-toggle="tooltip" title="View Profile" > <img src="images/user.png" alt="user"> </a>
         </div>
    </nav>
    <nav  class="navbar navbar-expand-md bg-dark navbar-dark justify-content-center">
          <div class="centernav">
            <a  href="/browse" data-toggle="tooltip" title="Search For Notes"><img style="background-color:#eeeeee;padding:10px;border-radius:5px;" src="images/browse.png" alt="dashboard"> </a>
            <a  href="/new_note" data-toggle="tooltip" title="Post new Note" > <img src="images/newnote.png" alt="add new note"> </a>
            <a  href="/dashboard" data-toggle="tooltip" title="Dashboard"> <img src="images/dashboard.png" alt="dashboard"> </a>
            <a  href="/videos"  data-toggle="tooltip" title="Watch Educational Youtube Videos of your feild." > <img src="images/videos.png" alt="Videos"> </a>
            <a  href="/dash"  data-toggle="tooltip" title="Your saved Youtube Videos" > <img src="images/save.png" alt="Saved Videos"> </a>
          </div>
    </nav>
    <div class="scrollmenu">
      <form class="" action="/browse" method="post">
        <a href="/browse" class="btn btn-primary">All</a>
        <button type="submit" class="btn btn-primary" name="button" value="Engineering">Engineering</button>
        <button type="submit" class="btn btn-primary" name="button" value="Medical">Medical</button>
        <button type="submit" class="btn btn-primary" name="button" value="science">Science</button>
        <button type="submit" class="btn btn-primary" name="button" value="commerce">Commerce</button>
        <button type="submit" class="btn btn-primary" name="button" value="CA">CA</button>
        <button type="submit" class="btn btn-primary" name="button" value="School">School</button>
        <button type="submit" class="btn btn-primary" name="button" value="Other">Other</button>
      </form>
    </div>
    <div class="browse">
     <h2 style="font-family:cursive;"><u><%=title%></u></h2>
     <div class="all-notes">
      <% notes.forEach(function(note){%>
        <div class="card">
        <p class="username"><a href="/users/<%=note.notesource%>"  style="text-align:left;background-color:#b5076b; color:white;" ><%=note.sourcename%></a></p>
        <h3><u class="head-text">Category </u>: <%=note.category%></h3>
        <h3><u class="head-text">Subject </u>: <%=note.subject%></h3>
        <h3><u class="head-text"> Title</u> :<%=note.title%></h1>
        <h3><u class="head-text"> Subtitle </u>: <%=note.subtitle%></h3>
         <p><a class="btn btn-primary btn-lg" href="/notes/<%=note._id%>" role="button">Know More</a></p>
        </div>
      <% })%>
     </div>
     </div>
     <script>
 $(document).ready(function(){
   $('[data-toggle="tooltip"]').tooltip();
 });
 </script>
    </body>
    </html>
